<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="neatlogic.module.report.dao.mapper.ReportDataMapper">

    <select id="getDistrictDataById" parameterType="java.lang.Integer"
            resultType="neatlogic.framework.report.dto.data.DistrictVo">
        select name,
               level,
               adcode,
               lng,
               lat,
               children_count as childrenCount,
               parent,
               lft,
               rht
        from report_data_district
        where adcode = #{value}
    </select>
    <select id="searchDistrictData" parameterType="neatlogic.framework.report.dto.data.DistrictVo"
            resultType="neatlogic.framework.report.dto.data.DistrictVo">
        select
        name,
        level,
        adcode,
        lng,
        lat,
        children_count as childrenCount,
        parent,
        lft,
        rht
        from report_data_district
        <where>
            <if test="parent != null and lft != null and rht != null">
                and lft &gt;= #{lft} and rht &lt;=#{rht}
            </if>
        </where>
    </select>
</mapper>
